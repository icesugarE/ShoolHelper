<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.fragment.MessageFragment"
    android:id="@+id/frame_message">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/SmartRlMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_yellow"
        android:padding="1dp">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="私信"
            android:textSize="26dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ln_user"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/box_color1">

        <ImageView
            android:id="@+id/Img_01"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/bigmessage"/>



        <TextView
            android:id="@+id/TV_01"
            android:layout_toRightOf="@+id/Img_01"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="我的通知"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_below="@+id/TV_01"
            android:layout_alignLeft="@+id/TV_01"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="官方通知"
            android:textSize="14dp"
            android:textColor="#888888"/>



        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/home_publish_arrows_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ln_a"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/box_color1">

        <ImageView
            android:id="@+id/Img_02"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/people1"/>



        <TextView
            android:id="@+id/TV_02"
            android:layout_toRightOf="@+id/Img_02"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="小红"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_below="@+id/TV_02"
            android:layout_alignLeft="@+id/TV_02"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="你的单子我接了"
            android:textSize="14dp"
            android:textColor="#888888"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="12:21"
            android:textSize="12dp"
            android:textColor="#888888" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ln_b"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/box_color1">

        <ImageView
            android:id="@+id/Img_03"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/people2"/>



        <TextView
            android:id="@+id/TV_03"
            android:layout_toRightOf="@+id/Img_03"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="小明"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_below="@+id/TV_03"
            android:layout_alignLeft="@+id/TV_03"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="你的单子我接了"
            android:textSize="14dp"
            android:textColor="#888888"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="12:21"
            android:textSize="12dp"
            android:textColor="#888888" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ln_c"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/box_color1">

        <ImageView
            android:id="@+id/Img_04"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/people3"/>



        <TextView
            android:id="@+id/TV_04"
            android:layout_toRightOf="@+id/Img_04"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="小黑"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_below="@+id/TV_04"
            android:layout_alignLeft="@+id/TV_04"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="你的单子我接了"
            android:textSize="14dp"
            android:textColor="#888888"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="12:21"
            android:textSize="12dp"
            android:textColor="#888888" />


    </RelativeLayout>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>